@import "./styles/iconfont.wxss";

/* 初始化样式 */
/* 微信小程序不支持通配符 */

page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色 通过变量来实现*/

page {
  /* 定义统一的颜色 */
  --themeColor: #eb4450;
  /* 定义统一的字体大小  假设设计稿 大小是 375px
  1px = 2rpx
  14px = 28rpx
  */

  font-size: 28rpx;
}
